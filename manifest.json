{
  "manifest_version": 3,
  "name": "BlockDistractions",
  "description": "Remove distractions from YouTube by hiding homepage videos and sidebar recommendations.",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "blocker.js"
      ],
      "run_at": "document_idle"
    }
  ]
}